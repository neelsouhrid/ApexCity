<?xml version="1.0" encoding="utf-8"?>
<!-- 
    This file defines a vertical linear gradient drawable.
    It should be placed in the res/drawable/ directory and named gradient_overlay.xml.
    It fades from transparent at the top to solid black at the bottom.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the gradient properties -->
    <gradient
        android:angle="270"
        android:type="linear"
        android:startColor="#00000000"
        android:centerColor="#80000000"
        android:endColor="#FF000000" />
        <!-- START COLOR: Fully Transparent Black (Alpha=00) -->


        <!-- CENTER COLOR (Optional but improves smooth transition): 50% Opaque Black (Alpha=80) -->


        <!-- END COLOR: Fully Opaque Black (Alpha=FF) -->


</shape>
